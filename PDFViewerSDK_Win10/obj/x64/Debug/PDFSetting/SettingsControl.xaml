<UserControl
    x:Class="RDPDFSetting.ui.SettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RDPDFSetting.ui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="500">

    <Grid>
        <Popup x:ConnectionId='2' x:Name="RadioGroupPopup" IsLightDismissEnabled="true"                                >
            <StackPanel x:ConnectionId='3' Width="500" Height="300" x:Name="PopupContainer" Orientation="Horizontal">
                <StackPanel.Background>
                    <SolidColorBrush Color="#FFCCCCCC" Opacity="0.9"/>
                </StackPanel.Background>
                <Grid Margin="20" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" Margin="10">
                        <Button x:ConnectionId='18' x:Name="mRenderQualityBtn"                                   >
                            <TextBlock Text="Render Quality"  Foreground="#FFDDDDDD"/>
                        </Button>
                        <TextBlock x:ConnectionId='19' x:Name="mRenderQualityLabel" Foreground="#FF666666" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0" Margin="10">
                        <Button x:ConnectionId='16' x:Name="mViewModeBtn"                             >
                            <TextBlock Text="View Mode"   Foreground="#FFDDDDDD"/>
                        </Button>
                        <TextBlock x:ConnectionId='17' x:Name="mViewModeLabel" Foreground="#FF666666" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="1" Margin="10">
                        <Button x:ConnectionId='14' x:Name="mInkWidthBtn"                             >
                            <TextBlock Text="Ink Line Width"   Foreground="#FFDDDDDD"/>
                        </Button>
                        <TextBlock x:ConnectionId='15' x:Name="mInkWidthLabel" Foreground="#FF666666" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Margin="10">
                        <Button x:ConnectionId='12' x:Name="mInkColorBtn"                             >
                            <TextBlock Text="Ink Line Color"  Foreground="#FFDDDDDD"/>
                        </Button>
                        <Rectangle x:ConnectionId='13' Width="30" Height="30" x:Name="mInkColorLabel" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2" Margin="10">
                        <Button x:ConnectionId='10' x:Name="mRectWidthBtn"                              >
                            <TextBlock Text="Rect Line Width"  Foreground="#FFDDDDDD"/>
                        </Button>
                        <TextBlock x:ConnectionId='11' x:Name="mRectWidthLabel" Foreground="#FF666666" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Margin="10">
                        <Button x:ConnectionId='8' x:Name="mRectColorBtn"                              >
                            <TextBlock Text="Rect Line Color"  Foreground="#FFDDDDDD"/>
                        </Button>
                        <Rectangle x:ConnectionId='9' x:Name="mRectColorLabel" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="3" Margin="10">
                        <Button x:ConnectionId='6' x:Name="mEllipseWidthBtn"                                 >
                            <TextBlock Text="Ellipse Line Width"  Foreground="#FFDDDDDD"/>
                        </Button>
                        <TextBlock x:ConnectionId='7' x:Name="mEllipseWidthLabel" Foreground="#FF666666" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="3" Margin="10">
                        <Button x:ConnectionId='4' x:Name="mEllipseColorBtn"                                 >
                            <TextBlock Text="Ellipse Line Color" Foreground="#FFDDDDDD"/>
                        </Button>
                        <Rectangle x:ConnectionId='5' x:Name="mEllipseColorLabel" Width="30" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left"  Margin="10"/>
                    </StackPanel>

                </Grid>
            </StackPanel>
        </Popup>
    </Grid>
</UserControl>

