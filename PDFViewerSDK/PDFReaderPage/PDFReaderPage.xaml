<Page
    x:Class="RDPDFReader.PDFReaderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RDPDFReader"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <RelativePanel Name="mRoot">
        <RelativePanel Name="mView" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True">
        </RelativePanel>
        <RelativePanel Name="mBarCmd" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWithPanel="True" Height="80" Background="#7F000000">
            <Button x:Name="mBack" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Width="80" Height="70" Click="mBack_Click" Style="{StaticResource AppBarButtonStyle}" >
                <Image Source="/Assets/imgs/left_arrow.png"/>
                <!--<Button.Background>
                    <ImageBrush ImageSource="/Assets/imgs/left_arrow.png"/>
                </Button.Background>-->
            </Button>
            <Button x:Name="mVMode" RelativePanel.RightOf="mBack" RelativePanel.AlignVerticalCenterWithPanel="True" Width="80" Height="70" Click="mVMode_Click" Style="{StaticResource AppBarButtonStyle}">
                <Image Source="/Assets/imgs/icon_view_mode.png"/>
                <!--<Button.Background>
                    <ImageBrush ImageSource="/Assets/imgs/icon_thumbnail.png"/>
                </Button.Background>-->
            </Button>
            <Button x:Name="mTool" RelativePanel.RightOf="mVMode" RelativePanel.AlignVerticalCenterWithPanel="True" Width="80" Height="70" Click="mTool_Click" Style="{StaticResource AppBarButtonStyle}">
                <Image Source="/Assets/imgs/icon_menu.png"/>
                <!--<Button.Background>
                    <ImageBrush ImageSource="/Assets/imgs/icon_menu.png"/>
                </Button.Background>-->
            </Button>
            <Button x:Name="mAnnot" RelativePanel.RightOf="mTool" RelativePanel.AlignVerticalCenterWithPanel="True" Width="80" Height="70" Click="mAnnot_Click" Style="{StaticResource AppBarButtonStyle}">
                <Image Source="/Assets/imgs/annot_rect_text.png"/>
                <!--<Button.Background>
                    <ImageBrush ImageSource="/Assets/imgs/annot_rect_text.png"/>
                </Button.Background>-->
            </Button>
        </RelativePanel>
        <RelativePanel Name="mBarAnnot" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWithPanel="True" Height="80" Background="#7F000000">
            <Button x:Name="mCancel" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Width="80" Height="70" Click="mCancel_Click" Style="{StaticResource AppBarButtonStyle}">
                <Image Source="/Assets/imgs/annot_remove.png"/>
            </Button>
            <Button x:Name="mOk" RelativePanel.RightOf="mCancel" RelativePanel.AlignVerticalCenterWithPanel="True" Width="80" Height="70" Click="mOk_Click" Style="{StaticResource AppBarButtonStyle}">
                <Image Source="/Assets/imgs/annot_done.png"/>
            </Button>
        </RelativePanel>
        <RelativePanel x:Name="mThumb" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Height="160"></RelativePanel>
        <local:PDFPagesView x:Name="mPages" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Visibility="Collapsed"/>
    </RelativePanel>
</Page>
