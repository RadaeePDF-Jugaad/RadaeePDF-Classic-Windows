<UserControl
    x:Class="PDFViewerSDK_Win10.AnnotControls.FormComboControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PDFViewerSDK_Win10.AnnotControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>
        <DataTemplate x:Key="ComboItemTemplate">
            <Grid HorizontalAlignment="Left" Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
                <StackPanel Margin="0,0,0,0" Orientation="Vertical">
                    <TextBlock TextWrapping="Wrap" Foreground="{StaticResource ApplicationForegroundThemeBrush}" Width="300" VerticalAlignment="Center" Text="{Binding Title}" HorizontalAlignment="Left" FontFamily="Segoe UI"/>
                </StackPanel>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid>
        <Popup x:Name="FormComboPopup" IsLightDismissEnabled="true" Loaded="FormComboPopup_Loaded">
            <StackPanel Width="400" Height="300" x:Name="PopupContainer" Orientation="Horizontal">
                <StackPanel.Background>
                    <SolidColorBrush Color="#FFCCCCCC" Opacity="0.9"/>
                </StackPanel.Background>
                <Grid VerticalAlignment="Center"  HorizontalAlignment="Center" Width="400" Height="300">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Text="Select: " Foreground="White" FontSize="36"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,50,0,0"/>
                    <ListView x:Name="combo_list" Grid.Row="0" Grid.Column="1" Width="240" Height="150" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10, 50, 10, 0" ItemTemplate="{StaticResource ComboItemTemplate}" IsItemClickEnabled="True" ItemClick="OnComboListItemClicked"/>
                    <Button x:Name="button_cancel" Grid.Row="1" BorderThickness="1" Content="Cancel" Height="60" FontSize="36" FontWeight="Normal" Margin="30,0,0,20" Click="ButtonClick"/>
                    <Button x:Name="button_ok" Grid.Row="1" Grid.Column="1" Content="OK" Height="60" FontSize="36" FontWeight="Normal" Margin="100,0,0,20" Click="ButtonClick"/>
                </Grid>
            </StackPanel>
        </Popup>
    </Grid>
</UserControl>